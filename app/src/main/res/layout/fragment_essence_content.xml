<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="demo.yang.com.baisi.Essence.View.Essence_content_Fragment">

    <TextView
        android:id="@+id/base_text"
        android:text="开发ing"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <demo.yang.com.baisi.Widget.PullRefreshLayout
        android:id="@+id/essence_content_swiperefreshlayout"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_essence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </demo.yang.com.baisi.Widget.PullRefreshLayout>


</LinearLayout>
